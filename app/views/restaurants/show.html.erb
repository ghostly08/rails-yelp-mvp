<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<%= link_to 'see all restaurants', restaurants_path %>
<%= link_to 'Review this restaurant', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Delete",
      restaurant_path,
      method: :delete, data: {confirm: "Are you sure?"}
%>



<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
    <%= link_to "Delete",
      review_path(review),
      method: :delete, data: {confirm: "Are you sure?"}
    %>
  <% end %>

</ul>
<br>
