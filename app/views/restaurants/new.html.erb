<h1>New Restaurant</h1>

<%= simple_form_for [ @restaurant ] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: [['0', 'Chinese'], ['1', 'Italian'], ['2', 'Japanese'], ['3', 'French'], ['4', 'Belgian']], label_method: :second, value_method: :first %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>
